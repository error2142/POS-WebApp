@{
    ViewData["Title"] = "POS 點餐系統";
    var menu = ViewBag.Menu as Dictionary<string, List<WebApplication1.Controllers.OrderController.MenuItem>>;
    var cart = ViewBag.Cart as List<WebApplication1.Controllers.OrderController.CartItem>;
}

<!-- 🔹 頂部品牌列 -->
<div class="text-center bg-dark text-white py-3 mb-4 shadow-sm" style="font-size:1.8rem; font-weight:bold;">
    品.燒餅
</div>

<div class="text-end mt-3 me-3">
    <a asp-action="TodayOrders" class="btn btn-outline-dark">📋 查看今日訂單</a>
</div>

<div class="container mt-4">
    <div class="row">
        <!-- 左邊：菜單分類與品項 -->
        <div class="col-md-7">
            <h4 class="mb-3">🍱 點餐項目</h4>
            @if (menu != null)
            {
                foreach (var category in menu)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header bg-primary text-white fw-bold">@category.Key</div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in category.Value)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <div>
                                        <strong>@item.Name</strong>
                                        <span class="text-muted">@item.Price.ToString("N0")</span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <!-- 主品項按鈕 -->
                                        <form asp-action="AddToCart" method="post" class="add-to-cart-form m-0 p-0">
                                            <input type="hidden" name="name" value="@item.Name" />
                                            <input type="hidden" name="price" value="@item.Price" />
                                            <button class="btn btn-success btn-sm">確認</button>
                                        </form>

                                        <!-- 若有加料選項 -->
                                        @if (!string.IsNullOrEmpty(item.ExtraNote))
                                        {
                                            <form asp-action="AddToCart" method="post" class="add-to-cart-form m-0 p-0">
                                                <input type="hidden" name="name" value="@item.Name" />
                                                <input type="hidden" name="price" value="@item.Price" />
                                                <input type="hidden" name="extraNote" value="@item.ExtraNote" />
                                                <input type="hidden" name="extraPrice" value="@item.ExtraPrice" />
                                                <button class="btn btn-warning btn-sm">
                                                    +@item.ExtraNote (+@item.ExtraPrice.ToString("N0"))
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>

        <!-- 右邊：購物車清單 -->
        <div class="col-md-5">
            <h4 class="mb-3">🧾 結帳清單</h4>

            <!-- ✅ 使用 PartialView 統一購物車內容 -->
            <div id="cart-section">
                @await Html.PartialAsync("_CartPartial", cart)
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: "微軟正黑體", sans-serif;
    }

    .card-header {
        font-size: 1.1rem;
    }

    .btn-success, .btn-warning {
        min-width: 100px;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-danger {
        font-size: 0.85rem;
        padding: 4px 8px;
    }

    .qty-input {
        font-size: 1rem;
        text-align: center;
        -webkit-appearance: none;
        appearance: none;
    }

        .qty-input::-webkit-outer-spin-button,
        .qty-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
</style>

<script>
    // ✅ 手機點數量欄時，強制跳出數字鍵盤
    document.querySelectorAll('.qty-input').forEach(input => {
        input.addEventListener('focus', function () {
            this.showPicker?.(); // 在手機瀏覽器會自動跳出小鍵盤
        });
    });
</script>

<script>
        document.querySelectorAll('.add-to-cart-form').forEach(form => {
        form.addEventListener('submit', async function (e) {
            e.preventDefault(); // 不重整頁面
            const formData = new FormData(this);

            const res = await fetch('/Order/AddToCart', {
                method: 'POST',
                body: formData
            });

            if (res.ok) {
                // ✅ 更新右側購物車內容
                const html = await fetch('/Order/CartPartial').then(r => r.text());
                document.getElementById('cart-section').innerHTML = html;

                // ✅ 小提示浮窗
                const toast = document.createElement('div');
                toast.textContent = '✅ 已加入購物車';
                Object.assign(toast.style, {
                    position: 'fixed',
                    bottom: '20px',
                    right: '20px',
                    background: '#198754',
                    color: 'white',
                    padding: '10px 16px',
                    borderRadius: '8px',
                    zIndex: '9999',
                    boxShadow: '0 2px 6px rgba(0,0,0,0.2)'
                });
                document.body.appendChild(toast);
                setTimeout(() => toast.remove(), 1500);
            }
        });
    });
</script>